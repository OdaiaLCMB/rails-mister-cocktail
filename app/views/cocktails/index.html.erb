<h2>Cocktails</h2>

<% @cocktails.each do |cocktail| %>
  <%= cocktail.name %>
  <%= link_to 'View', cocktail_path(cocktail) %> |
  <%= link_to 'Edit', edit_cocktail_path(cocktail) %> |
  <%= link_to 'Delete', cocktail_path(cocktail),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to 'Add a new cocktail', new_cocktail_path(@cocktail) %>
