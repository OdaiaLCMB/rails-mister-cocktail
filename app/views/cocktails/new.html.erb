<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2>New cocktail</h2>

      <%= simple_form_for(@cocktail) do |f| %>
        <p>
         <%= f.input :name %>
        </p>
        <p>
          <%= f.button :submit, class: "btn btn-default" %>
        </p>
      <% end %>

      <%= link_to "Back", cocktails_path %>
    </div>
  </div>
</div>



